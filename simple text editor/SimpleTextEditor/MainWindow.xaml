<Window x:Class="SimpleTextEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="tbEditor" HorizontalAlignment="Left" Height="231" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="497"/>
        <Button x:Name="btnOpenFile" Content="Open File" HorizontalAlignment="Left" Margin="10,246,0,0" VerticalAlignment="Top" Width="100" Click="btnOpenFile_Click"/>
        <Button x:Name="btnSaveFile" Content="Save File" HorizontalAlignment="Left" Margin="124,246,0,0" VerticalAlignment="Top" Width="100" Click="btnSaveFile_Click"/>

    </Grid>
</Window>
